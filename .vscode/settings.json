// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        // Exclude generated js files
        "**/app/**/*.js": {
            "when": "$(basename).ts"
        },
        "**/api/**/*.js": {
            "when": "$(basename).ts"
        },
        // Exclude sourcemap files
        "**/app/**/*.js.map": true,
        "**/api/**/*.js.map": true,
        // Exclude declaration files files
        "**/app/**/*.d.ts": true,
        "**/api/**/*.d.ts": true,
        // npm error logs
        "**/npm-debug.log*.*": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        // Exclude generated js files
        "**/app/**/*.js": {
            "when": "$(basename).ts"
        },
        "**/api/**/*.js": {
            "when": "$(basename).ts"
        },
        // Exclude sourcemap files
        "**/app/**/*.js.map": true,
        "**/api/**/*.js.map": true,
        // Exclude declaration files files
        "**/app/**/*.d.ts": true,
        "**/api/**/*.d.ts": true
    }
}